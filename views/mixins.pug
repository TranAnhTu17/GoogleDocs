mixin documentItem(desc, title, time) 
    li.document-item
        .document-item-preview 
            p= desc
        .document-item-info 
            p.document-item-title= title
            .document-item-bottom
                .document-item-icon
                    img(src="./images/docs_icon.png", alt="")
                p.document-item-time= time
                .document-dropdown
                    span.document-item-more
                        i.ti-more
                    ul.document-dropdown-list
                        li.document-dropdown-item
                            i.ti-smallcap
                            span.document-dropdown-item-text Rename
                        li.document-dropdown-item
                            i.ti-trash
                            span.document-dropdown-item-text Remove
                        li.document-dropdown-item
                            i.ti-new-window
                            span.document-dropdown-item-text Open in new tab
                        li.document-dropdown-item
                            i.ti-cloud-down
                            span.document-dropdown-item-text Download
mixin popup(title, desc, cancel, confirm, hasInput= false, hasDontSave= false)
    .popup 
        .popup-container 
            h3.popup-title= title 
            p.popup-desc= desc
            if hasInput
                input.popup-input(type="text")
            .popup-btn-group 
                button.popup-cancel= cancel
                if hasDontSave 
                    button.popup-no Don't Save 
                button.popup-confirm= confirm