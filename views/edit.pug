section.edit 
    .edit-top 
        .edit-left 
            a.edit-logo(href="#!")  
                img(src="./images/logo_edit.png", alt="")
            .edit-info 
                input.edit-title(type="text", placeholder="Untitled document")
                p.edit-time
        .edit-right 
            .edit-action 
                p.edit-action-item 
                    i.ti-star
                    span.edit-action-item-text  Star
                p.edit-action-item.edit-action-detail 
                    i.ti-info-alt
                    span.edit-action-item-text Document details
                p.edit-action-item 
                    i.ti-comment-alt
                    span.edit-action-item-text Edit history
            .edit-save 
                i.ti-save
                span Save
            .edit-avatar 
                img(src="https://i.pinimg.com/564x/78/8b/f4/788bf4a85b153a50f986792a0d63e7a6.jpg", alt="")
        .edit-toggle 
            i.ti-menu
    .edit-main 
        .container.edit-main-container
            textarea.edit-content#content
    .popup-save 
        +popup('Save','Do you want to save this document?','Cancel','OK', false, true)
    .popup-detail
        .popup-detail-main 
            .popup-detail-container 
                .popup-detail-top 
                    h3.popup-detail-title Document details
                    span.popup-detail-close     
                        i.ti-close
                ul.popup-detail-list 
                    li.popup-detail-item  
                        p.popup-detail-field Location 
                        p.popup-detail-location
                            i.ti-folder 
                            span My Driver
                    li.popup-detail-item
                        p.popup-detail-field Owner 
                        p me 
                    li.popup-detail-item  
                        p.popup-detail-field Modified
                        p.popup-detail-edit-time 11:04 AM by me
                    li.popup-detail-item  
                        p.popup-detail-field Created
                        p.popup-detail-create-time 11:04 AM

                
