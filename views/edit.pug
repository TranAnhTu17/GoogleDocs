section.edit 
    .edit-top 
        .edit-left 
            a.edit-logo(href="#!")  
                img(src="./images/logo.png", alt="")
            .edit-info 
                input.edit-title(type="text", placeholder="Untitled document")
                p.edit-time Last edit was yesterday at 5:39 PM
        .edit-right 
            span.edit-history
                i.ti-comment-alt
            .edit-share 
                i.ti-lock
                span Share
            .edit-avatar 
                img(src="https://i.pinimg.com/564x/d5/b0/4c/d5b04cc3dcd8c17702549ebc5f1acf1a.jpg", alt="")
    .edit-main 
        .container 
            textarea.edit-content#content
